<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_window">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fragmentHome_titleLinearId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="@string/nav_mine"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <com.android.widget.view.CircularImageView
                    android:id="@+id/imgHead"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:clickable="true"
                    android:src="@drawable/user_defaulthead" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/txtChangeAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/bg_mine_info"
                        android:padding="@dimen/dp_2"
                        android:text="登录"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlMyClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_class" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMyChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_child" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMyCollect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_collect" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMyCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_bill" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMyProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    android:id="@+id/txtContact"
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_property" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlQRCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mine_item_selector"
                android:clickable="true">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mine_qr_code" />

                <ImageView style="@style/arrow_right" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
