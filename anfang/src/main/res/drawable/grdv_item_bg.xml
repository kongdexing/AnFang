<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/line" />

            <gradient android:angle="270.0" android:endColor="@color/transparent_gray" android:startColor="@color/transparent_gray" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/transparent_gray" android:startColor="@color/transparent_gray" />

            <stroke android:width="1.0px" android:color="@color/line" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/bg_window" android:startColor="@color/bg_window" />

            <stroke android:width="1.0px" android:color="@color/line" />
        </shape>
    </item>

</selector>