<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/txtSOS1"
            style="@style/mineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号:" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/imgSOS1"
            android:layout_toRightOf="@+id/txtSOS1">

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_phone"
                android:inputType="number"
                android:background="@null"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/transparent_gray"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/imgDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:padding="10dp"
                android:src="@drawable/login_del" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imgSelect"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/icon_contracts" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="选择充值金额" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_recharge_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="30"
            android:text="30元"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_recharge_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="50"
            android:text="50元"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_recharge_100"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="100"
            android:text="100元"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_recharge_200"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="200"
            android:text="200元"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_recharge_300"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="300"
            android:text="300元"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_recharge_500"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_recharge_money"
            android:gravity="center"
            android:tag="500"
            android:text="500元"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>
