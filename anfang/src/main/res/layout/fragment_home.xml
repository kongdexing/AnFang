<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.widget.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--广告位-->
            <RelativeLayout
                android:id="@+id/rlTipAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:visibility="visible">

                <com.youth.banner.Banner
                    android:id="@+id/topBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:delay_time="3000"
                    app:indicator_drawable_selected="@color/text_black"
                    app:indicator_drawable_unselected="@color/transparent_white"
                    app:is_auto_play="true"
                    app:title_background="@color/translucent"
                    app:title_height="@dimen/dp_40" />

                <TextView
                    android:id="@+id/tipTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_2"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:visibility="gone"
                android:orientation="vertical">

                <!--课程,评语,教育头条-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_home_top"
                        android:gravity="center"
                        android:padding="@dimen/dp_5">

                        <com.android.widget.mygridview.MyGridView
                            android:id="@+id/grd_tip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="@dimen/dp_1"
                            android:listSelector="@null"
                            android:numColumns="3"
                            android:scrollbars="none"
                            android:stretchMode="columnWidth" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_black_4" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@color/color_black_4" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </FrameLayout>

                <View
                    style="@style/home_horizontal_line"
                    android:layout_marginTop="@dimen/dp_15" />

                <!--校园生活-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:gravity="center"
                            android:text="@string/home_school"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                    <com.android.widget.mygridview.MyGridView
                        android:id="@+id/grd_school"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_8"
                        android:horizontalSpacing="@dimen/dp_10"
                        android:listSelector="@null"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/dp_5" />
                </LinearLayout>

            </LinearLayout>

            <!--教育培训-->
            <com.xptschool.parent.ui.fragment.home.HomeEduGroupView
                android:id="@+id/eduGroupView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15" />

            <!--快乐成长-->
            <com.xptschool.parent.ui.fragment.home.HomeHappyGroupView
                android:id="@+id/happyGrowView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30" />

            <!--理财投资-->
            <com.xptschool.parent.ui.fragment.home.HomePropertyView
                android:id="@+id/propertyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15" />

            <!--校园购-->
            <com.xptschool.parent.ui.fragment.home.HomeShopView
                android:id="@+id/shopView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15" />
            <!--生活缴费-->
            <com.xptschool.parent.ui.fragment.home.HomePayMentView
                android:id="@+id/paymentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/line_contacts"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_window"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="@string/home_bottom"
                    android:textColor="@color/color_black_3"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>
    </com.android.widget.pulltorefresh.PullToRefreshScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="@string/nav_home"
            android:textSize="@dimen/sp_18" />
    </android.support.v7.widget.Toolbar>
