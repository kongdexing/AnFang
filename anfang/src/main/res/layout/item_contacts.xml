<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContacts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_item_selector"
    android:clickable="true">

    <com.android.widget.view.CircularImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        android:clickable="true"
        android:src="@null" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgHead"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:paddingTop="@dimen/dp_15"
        android:text="方圆"
        android:textColor="@color/color_black_2" />

    <TextView
        android:id="@+id/txtUnReadNum"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/text"
        android:background="@drawable/bg_circle_dot"
        android:gravity="center"
        android:text="38"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_contacts" />
</RelativeLayout>