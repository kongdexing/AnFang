<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.watch.MoniterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="设备名片" />

    <RelativeLayout
        android:id="@+id/rlItem1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_mine_info">

        <com.android.widget.view.CircularImageView
            android:id="@+id/imgHead"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/user_defaulthead"
            app:border_color="@color/colorPrimary"
            app:border_width="@dimen/dp_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/imgHead"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拉拉"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/txtIMEI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="183-2435-9798"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="*已绑定的手机号：" />

        <TextView
            android:id="@+id/txtCardPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18910111002"
            />
    </LinearLayout>

</LinearLayout>