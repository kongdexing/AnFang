<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHomeNews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_5">

    <View style="@style/home_horizontal_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txtMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:text="更多 >"
            android:textColor="@color/color_black_3"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

    <com.android.widget.mygridview.MyGridView
        android:id="@+id/grd_news"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:horizontalSpacing="@dimen/dp_1"
        android:listSelector="@drawable/line_contacts"
        android:numColumns="1"
        android:scrollbars="none"
        android:stretchMode="columnWidth" />

</LinearLayout>
