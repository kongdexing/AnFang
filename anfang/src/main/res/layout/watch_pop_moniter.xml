<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHomeItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lay1"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <com.android.widget.view.CircularImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_40"
        android:clickable="true"
        android:src="@drawable/user_defaulthead" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="点击语音监护即发送信号至设\n备，成功后将回拨已绑定的手机号\n码（账号）" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:gravity="center"
        android:hint="未绑定手机号"
        android:text="13552676774"
        android:inputType="phone"
        android:textColor="@color/color_black_1"
        android:textColorHint="@color/color_black_3"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:text="*点击号码可进行编辑"
        android:textSize="@dimen/sp_20" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_bg_normal"
        android:gravity="center"
        android:text="语音监护"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>
