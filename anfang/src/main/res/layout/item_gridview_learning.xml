<?xml version="1.0" encoding="utf-8"?>
<com.xptschool.parent.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlModule"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@drawable/wallet_learning_selector"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_module"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/dp_5"
        android:padding="0.1dip"
        android:src="@drawable/post_add_pic" />

    <TextView
        android:id="@+id/txt_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_module"
        android:layout_centerHorizontal="true"
        android:text="title"
        android:textColor="@color/color_black_2"
        android:textSize="@dimen/sp_14" />

</com.xptschool.parent.view.SquareLayout>