<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/mine_item_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_userinfo" />

                <ImageView style="@style/arrow_right" />

                <View style="@style/line1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_bind" />

                <ImageView style="@style/arrow_right" />

                <View style="@style/line1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    style="@style/mineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_card_whitelist" />

                <ImageView style="@style/arrow_right" />

                <View style="@style/line1" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>